<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C0D0DD"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#042F9B"
        android:text="Conversor de Moeda"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/edit_euros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Insira um valor em Euros"
        android:inputType="number|numberDecimal|numberSigned"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/button_dolar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:text="Dolar"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:iconTint="#03A9F4" />

        <Button
            android:id="@+id/button_real"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:text="Real"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:iconTint="#03A9F4"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/button_peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:text="Peso"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:iconTint="#03A9F4" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Desenvolvido por Fabio Kusaba"
        android:textColor="#237DD7"
        android:textSize="24sp"
        android:textStyle="bold" />
</LinearLayout>